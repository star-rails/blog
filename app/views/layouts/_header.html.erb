        <% else %>
        <%= link_to "登录",  login_path %>
        <span><%= link_to "注册", register_path %></span>                
        <%  end  %>
    </div>
    <div>
        <span><%= link_to "用户信息", users_path %></span>            
    </div>
</div>            
