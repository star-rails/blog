<style>
.headline {

 width:1000px; height:auto;
 margin: 0 auto;
 overflow: hidden;
 zoom:1;
}
.headline div {
    float:left;
    margin-right: 10px;
}
</style>
<div class="headline">
    <div>
        <%= link_to "Ruby on rails ",:root, id: "logo" %>
    </div>
    <div>     
        <% unless current_user.blank? %>
        欢迎 :
        <%= current_user.name %>
        <%= link_to "退出", logout_path %>
